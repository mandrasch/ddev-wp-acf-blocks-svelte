!/wp-content
/wp-content/*
!/wp-content/themes
/wp-content/themes/*
!/wp-content/themes/raft-child
# vite output dir (compiled)
/wp-content/themes/raft-child/dist

# Vite & npm
!/.ddev/.env
!/vite.config.js
!/package.json
!/package-lock.json